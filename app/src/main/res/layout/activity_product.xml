<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">

    <ImageView
        android:id="@+id/idTitleImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
            android:id="@+id/idTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Iphone 10 pro Max"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idTitleImage"/>
    <TextView
        android:id="@+id/idline1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_200"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/idTitleText"
        />

    <TextView
        android:id="@+id/iddescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/idline1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="Description"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/idDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="hszbdvjbsajJVNKZnlkcnalkvfmkZVMklmzvl mldkmlkamzlkmfvlkzsml"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/iddescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/idQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/idDesc"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="Quantity"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idMinusBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_btn_back"
        android:text="-"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/idQuantity"
        app:layout_constraintTop_toBottomOf="@id/idDesc"/>


    <TextView
        android:id="@+id/idtotalQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/idPlusBtn"
        app:layout_constraintEnd_toStartOf="@id/idPlusBtn"
        app:layout_constraintStart_toEndOf="@id/idMinusBtn"
        app:layout_constraintTop_toBottomOf="@id/idDesc" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idPlusBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_btn_back"
        android:text="+"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/idtotalQuantity"
        app:layout_constraintTop_toBottomOf="@id/idDesc"
        />

    <TextView
        android:id="@+id/idline2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_200"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/idtotalQuantity"
        />

    <TextView
        android:id="@+id/idTitlePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/idline2"/>
    <TextView
        android:id="@+id/idProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$240.00"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/idTitlePrice"/>

</androidx.constraintlayout.widget.ConstraintLayout>